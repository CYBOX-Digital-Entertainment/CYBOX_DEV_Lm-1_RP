{
  "format_version": "1.17.30",
  "animation_controllers": {
    "controller.animation.vehicle_slope": {
      "initial_state": "default",
      "states": {
  "default": {
    "animations": ["move"],
    "transitions": [{"slope_active": "Math.abs(variable.slope_factor) > 0.1"}]
  },
  "slope_active": {
    "animations": ["slope_tilt"],
    "transitions": [{"default": "Math.abs(variable.slope_factor) <= 0.05"}],
    "blend_transition": 0.3
  }
}

    }
  }
}
