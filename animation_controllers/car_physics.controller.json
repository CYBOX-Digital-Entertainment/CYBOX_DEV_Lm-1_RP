{
  "format_version": "1.17.30",
  "animation_controllers": {
    "controller.animation.car_physics": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "car_wheels"
          ],
          "transitions": [
            { "moving": "query.ground_speed > 0.01" }
          ]
        },
        "moving": {
          "animations": [
            { "car_wheels": "query.ground_speed * 2.5" }
          ],
          "transitions": [
            { "default": "query.ground_speed <= 0.01" }
          ]
        }
      }
    }
  }
}
